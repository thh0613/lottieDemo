<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/file_from_assets"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="从assets中加载"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:background="#cccccc"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/file_from_sdcard"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="从sdcard中加载"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:background="#cccccc"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/file_from_net"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="从网络中加载"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:background="#cccccc"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/dynamic_load_image"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="加载lottie的图片"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:background="#cccccc"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/pause_anim"
            android:text="暂停动画"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="6dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/resume_anim"
            android:text="恢复动画"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="6dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/progress_anim"
            android:text="动画进度"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="6dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"/>

</LinearLayout>